<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.juan.trabalhogps.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nome :"
            />

        <EditText
            android:id="@+id/etNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Latitude: "/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Longitude: "/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/tvLatitude"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/tvLongitude"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Mapa: "/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Zoom: "/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spMapa"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/spZoom"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>
    </LinearLayout>
    <Button
    android:text="Pegar Local."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="btnPegarLocalizacaoOnClick"/>

    <Button
        android:text="Excluir Local."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnExcluirLocalizacaoOnClick"/>

    <Button
        android:text="Buscar mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnBuscarMapaOnClick"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btTirarFoto"
            android:layout_width="wrap_content"
            android:text="Tirar Foto"
            android:onClick="btTirarFotoOnClick"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="15sp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            />

        <Button
            android:id="@+id/btSalvarRegistro"
            android:layout_width="wrap_content"
            android:text="Salvar Registro"
            android:onClick="btSalvarRegistroOnClick"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="15sp"
            android:layout_height="45dp"
            />

        <Button
            android:id="@+id/btListar"
            android:layout_width="wrap_content"
            android:text="Listar"
            android:onClick="btListrarOnClick"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="15sp"
            android:layout_height="45dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >



        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
